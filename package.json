{
  "name": "oauth2-provider-middleware",
  "version": "0.0.16",
  "description": "Middleware implementing an OAuth2 provider, with pluggable storage",
  "main": "src",
  "scripts": {
    "test": "jest --rootDir src",
    "test-mongostore": "jest --rootDir test/mongo-store",
    "dev": "concurrently \"npm:watch-*\"",
    "watch-prettier": "onchange '**/!(__generated__)/*.js' -- prettier --write {{changed}}",
    "watch-eslint": "onchange '**/!(__generated__)/*.js' -- eslint {{changed}}",
    "watch-test": "npm run test -- --watch",
    "sample": "nodemon sample",
    "prepublishOnly": "npm run test && npm run test-mongostore",
    "sample-client": "nodemon sample-client"
  },
  "keywords": [
    "middleware",
    "oauth2",
    "express",
    "authentication"
  ],
  "author": "chris@uber5.com",
  "license": "MIT",
  "devDependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "concurrently": "^4.1.0",
    "dotenv": "^8.2.0",
    "ejs": "^2.6.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "husky": "^1.3.1",
    "jest": "^25.1.0",
    "lint-staged": "^8.1.5",
    "mongodb": "^3.2.2",
    "nodemon": "^1.19.4",
    "onchange": "^6.1.0",
    "passport": "^0.4.0",
    "passport-facebook": "^3.0.0",
    "passport-local": "^1.0.0",
    "prettier": "1.16.4",
    "puppeteer": "^1.14.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,md,json}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ]
  },
  "dependencies": {
    "debug": "^4.1.1",
    "js-sha256": "^0.9.0",
    "jsonwebtoken": "^8.5.1",
    "passport-oauth2": "^1.5.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uber5/oauth2-provider-middleware"
  },
  "jest": {
    "setupFiles": [
      "dotenv/config"
    ]
  }
}
